.main
  .upper
    .upper__form
      = form_with(url: search_posts_path, method: :get, local: true) do |form|
        = form.text_field :keyword, placeholder: "投稿を検索する", class: "form__input"
        = form.submit "検索", class: "form__btn form__input"
  .lower
    - @posts.reverse.each do |post|
      =link_to post_path(post.id), class: "contents" do
        = image_tag post.image, alt:"写真", class:"contents__image"
        .contents__info
          %apan.contents__info__title
            =post.title
          %apan.contents__info__name
            = icon('fas', 'user',  class: "")
            = post.user.nickname
  .pagination
    = paginate(@posts)

