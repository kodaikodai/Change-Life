!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Qofl
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .wrapper
      .header
        .header__bar
          .header__bar__title
            =link_to 'title', root_path, class: ""
          .header--btn
            - if user_signed_in?
              .grid-6
                = link_to "ログアウト"
                -# method: :delete
                = link_to  "投稿する","", class: "header__bar--btn__login"
            - else
              .grid-6
                = link_to "ログイン","", class: 'header__bar--btn__login'
                = link_to "新規登録","", class: 'header__bar--btn__signin'
      = yield
      .footer
        フッター
